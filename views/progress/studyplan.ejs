<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Study Plan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .card { margin-bottom: 15px; }
    .completed { text-decoration: line-through; color: gray; }
  </style>
</head>
<body>
<div class="container mt-4">
  <h1 class="text-center mb-4">ðŸ“š My Study Plan</h1>

  <% if(studyPlan && studyPlan.plan && studyPlan.plan.length > 0){ %>
    <div class="mb-3 text-center">
      <p><strong>Exam Date:</strong> <%= studyPlan.examDate.toDateString() %></p>
      <p><strong>Daily Hours:</strong> <%= studyPlan.dailyHours %></p>
    </div>

    <% studyPlan.plan.forEach(day => { %>
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <strong><%= new Date(day.date).toDateString() %></strong> â€” <%= day.subject %>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <% day.tasks.forEach(task => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="<%= day.completed ? 'completed' : '' %>"><%= task %></span>
                <% if(!day.completed){ %>
                  <button 
                    class="btn btn-sm btn-success mark-complete" 
                    data-date="<%= day.date.toISOString().slice(0,10) %>" 
                    data-subject="<%= day.subject %>" 
                    data-task="<%= task %>">
                    Mark Complete
                  </button>
                <% } else { %>
                  âœ… Done
                <% } %>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    <% }) %>

  <% } else { %>
    <div class="alert alert-info text-center">
      <p>No study plan generated yet.</p>
      <a href="/progress/generate" class="btn btn-primary">âž• Generate Study Plan</a>
    </div>
  <% } %>

  <div class="text-center mt-3">
    <a href="/progress" class="btn btn-outline-secondary">â¬… Back to Dashboard</a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  document.querySelectorAll('.mark-complete').forEach(button => {
    button.addEventListener('click', async () => {
      const date = button.dataset.date;
      const subject = button.dataset.subject;
      const task = button.dataset.task;

      try {
        const res = await axios.post('/progress/studyplan/complete', { date, subject, task });
        if(res.data.success){
          button.closest('li').querySelector('span').classList.add('completed');
          button.replaceWith('âœ… Done');
        } else {
          alert('Failed to mark task as complete');
        }
      } catch (err) {
        console.error(err);
        alert('Error marking task complete');
      }
    });
  });
</script>
</body>
</html>
