<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generate Study Plan</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
  <style>
    body {
      padding: 2rem;
      background-color: #f8f9fa;
    }
    .form-container {
      max-width: 600px;
      margin: 0 auto;
      background: #fff;
      padding: 2rem;
      border-radius: 0.5rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2 class="mb-4">Generate Your Study Plan</h2>

    <% if (typeof success_msg !== 'undefined') { %>
      <div class="alert alert-success"><%= success_msg %></div>
    <% } %>
    <% if (typeof error_msg !== 'undefined') { %>
      <div class="alert alert-danger"><%= error_msg %></div>
    <% } %>

    <form action="/progress/studyplan/generate" method="POST">
      <div class="mb-3">
        <label for="examDate" class="form-label">Exam Date</label>
        <input type="date" class="form-control" id="examDate" name="examDate" required>
      </div>

      <div class="mb-3">
        <label for="subjects" class="form-label">Subjects (comma-separated)</label>
        <input type="text" class="form-control" id="subjects" name="subjects" placeholder="Math, Physics, Chemistry" required>
      </div>

      <div class="mb-3">
        <label for="dailyHours" class="form-label">Daily Study Hours</label>
        <input type="number" class="form-control" id="dailyHours" name="dailyHours" min="1" max="24" required>
      </div>

      <button type="submit" class="btn btn-primary w-100">Generate Plan</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
