<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Leaderboard - Smart EDU</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    .rank-badge {
      font-size: 0.9rem;
      padding: 0.4em 0.7em;
      border-radius: 50%;
    }
    .leader-card { transition: transform 0.2s ease; }
    .leader-card:hover { transform: translateY(-2px); }
    .small-muted { font-size:0.9rem; color:#6c757d; }
  </style>
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Smart EDU</a>
      <div class="d-flex align-items-center">
        <span class="me-3">Signed in as <strong><%= user && user.name ? user.name : 'Guest' %></strong></span>
        <a class="btn btn-outline-primary btn-sm" href="/progress">Dashboard</a>
        <a class="btn btn-outline-secondary btn-sm ms-2" href="/progress/studyplan">Study Plan</a>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <header class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h1 class="h3 mb-0">Leaderboard</h1>
        <p class="small-muted mt-1">See how you rank against other learners.</p>
      </div>
      <a href="/progress" class="btn btn-outline-primary"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
    </header>

    <!-- Flash messages -->
    <div id="flash-area">
      <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %><button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (typeof error_msg !== 'undefined' && error_msg) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %><button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <% const safeLeaderboard = Array.isArray(leaderboard) ? leaderboard : []; %>
        <% if (!safeLeaderboard.length) { %>
          <p class="text-muted mb-0">No leaderboard data available yet.</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="table-light">
                <tr>
                  <th scope="col" style="width:60px;">Rank</th>
                  <th scope="col">User</th>
                  <th scope="col" class="text-center">Quizzes Attempted</th>
                  <th scope="col" class="text-center">Total Score</th>
                </tr>
              </thead>
              <tbody>
                <% safeLeaderboard.forEach((entry, index) => { %>
                  <tr class="leader-card">
                    <td>
                      <% if (index === 0) { %>
                        <span class="badge bg-warning text-dark rank-badge"><i class="bi bi-trophy"></i> 1</span>
                      <% } else if (index === 1) { %>
                        <span class="badge bg-secondary rank-badge">2</span>
                      <% } else if (index === 2) { %>
                        <span class="badge bg-info text-dark rank-badge">3</span>
                      <% } else { %>
                        <span class="badge bg-light text-dark rank-badge"><%= index+1 %></span>
                      <% } %>
                    </td>
                    <td>
                      <strong><%= entry.user && entry.user.name ? entry.user.name : 'Anonymous' %></strong>
                      <% if (user && entry.user && user._id && entry.user._id && user._id.toString() === entry.user._id.toString()) { %>
                        <span class="badge bg-success ms-2">You</span>
                      <% } %>
                      <div class="small text-muted"><%= entry.user && entry.user.email ? entry.user.email : '' %></div>
                    </td>
                    <td class="text-center"><%= entry.quizzesAttempted || 0 %></td>
                    <td class="text-center"><span class="fw-bold"><%= entry.totalScore || 0 %></span></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

  </div><!-- /container -->

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
