<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leaderboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .card { margin-top: 20px; }
    .rank { font-weight: bold; font-size: 1.2rem; }
    .badge-custom { margin-right: 5px; }
  </style>
</head>
<body>
<div class="container mt-4">
  <h1 class="mb-4 text-center">üèÜ Leaderboard</h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <% if(leaderboard && leaderboard.length > 0){ %>
        <table class="table table-hover table-bordered align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>Total Progress</th>
              <th>Badges</th>
            </tr>
          </thead>
          <tbody>
            <% leaderboard.forEach((user, index) => { %>
              <tr>
                <td class="rank"><%= index + 1 %></td>
                <td><%= user.name %></td>
                <td>
                  <div class="progress" style="height: 20px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: <%= user.totalProgress %>%;">
                      <%= user.totalProgress %>%
                    </div>
                  </div>
                </td>
                <td>
                  <% if(user.badges && user.badges.length > 0){ %>
                    <% user.badges.forEach(badge => { %>
                      <span class="badge bg-warning text-dark badge-custom"><%= badge.name %></span>
                    <% }) %>
                  <% } else { %>
                    <span class="text-muted">No badges yet</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-center text-muted">No users in leaderboard yet.</p>
      <% } %>
    </div>
  </div>

  <div class="text-center mt-3">
    <a href="/progress" class="btn btn-outline-primary">‚¨Ö Back to Dashboard</a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
