<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quizzes</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .quiz-card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .quiz-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }
    .filter-bar {
      background: #fff;
      border-radius: 12px;
      padding: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/dashboard">EduPlatform</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link active" href="/quiz">Quizzes</a></li>
          <li class="nav-item"><a class="nav-link" href="/notes">Notes</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Available Quizzes</h2>
      <% if (user && user.role === 'teacher') { %>
        <a href="/quiz/create" class="btn btn-success">+ Create Quiz</a>
      <% } %>
    </div>

    <!-- Filter Bar -->
    <form method="GET" action="/quiz" class="filter-bar mb-4">
      <div class="row g-3">
        <!-- Subject Filter -->
        <div class="col-md-4">
          <select name="subject" class="form-select">
            <option value="all" <%= !currentSubject || currentSubject === 'all' ? 'selected' : '' %>>All Subjects</option>
            <% subjects.forEach(sub => { %>
              <option value="<%= sub %>" <%= currentSubject === sub ? 'selected' : '' %>><%= sub %></option>
            <% }) %>
          </select>
        </div>

        <!-- Difficulty Filter -->
        <div class="col-md-4">
          <select name="difficulty" class="form-select">
            <option value="all" <%= !currentDifficulty || currentDifficulty === 'all' ? 'selected' : '' %>>All Difficulties</option>
            <option value="easy" <%= currentDifficulty === 'easy' ? 'selected' : '' %>>Easy</option>
            <option value="medium" <%= currentDifficulty === 'medium' ? 'selected' : '' %>>Medium</option>
            <option value="hard" <%= currentDifficulty === 'hard' ? 'selected' : '' %>>Hard</option>
          </select>
        </div>

        <!-- Search Bar -->
        <div class="col-md-4 d-flex">
          <input type="text" name="search" class="form-control me-2" placeholder="Search quizzes..." value="<%= typeof currentSearch !== 'undefined' ? currentSearch : '' %>">
          <button class="btn btn-primary" type="submit">Filter</button>
        </div>
      </div>
    </form>

    <!-- Quizzes Grid -->
    <div class="row g-4">
      <% if (quizzes.length === 0) { %>
        <div class="col-12 text-center">
          <p class="text-muted">No quizzes found. Try adjusting your filters.</p>
        </div>
      <% } else { %>
        <% quizzes.forEach(quiz => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card quiz-card h-100">
              <div class="card-body">
                <h5 class="card-title fw-bold"><%= quiz.title %></h5>
                <p class="card-text text-muted">
                  <strong>Subject:</strong> <%= quiz.subject %><br>
                  <strong>Difficulty:</strong> 
                  <% if (quiz.difficulty === 'easy') { %>
                    <span class="badge bg-success">Easy</span>
                  <% } else if (quiz.difficulty === 'medium') { %>
                    <span class="badge bg-warning text-dark">Medium</span>
                  <% } else { %>
                    <span class="badge bg-danger">Hard</span>
                  <% } %>
                </p>
                <% if (quiz.description) { %>
                  <p class="small text-truncate"><%= quiz.description %></p>
                <% } %>
              </div>
              <div class="card-footer bg-white border-0">
                <small class="text-muted">By <%= quiz.createdBy ? quiz.createdBy.name : "Unknown" %></small>
                <a href="/quiz/take/<%= quiz._id %>" class="btn btn-outline-primary btn-sm float-end">Take Quiz</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
