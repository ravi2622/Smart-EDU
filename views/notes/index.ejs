<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Notes - Smart EDU</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
</head>
<body class="bg-light">

  <div class="container py-4">
    <h2 class="mb-4">üìò Notes</h2>

    <!-- Filters -->
    <form method="GET" class="row mb-3">
      <div class="col-md-3">
        <select name="subject" class="form-select" onchange="this.form.submit()">
          <option value="all" <%= currentSubject === "all" ? "selected" : "" %>>All Subjects</option>
          <% subjects.forEach(sub => { %>
            <option value="<%= sub %>" <%= currentSubject === sub ? "selected" : "" %>><%= sub %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <input type="text" name="search" class="form-control" placeholder="Search notes..." value="<%= currentSearch %>">
      </div>
      <div class="col-md-3">
        <button class="btn btn-primary w-100">Search</button>
      </div>
    </form>

    <!-- Notes List -->
    <div class="row">
      <% if (notes.length === 0) { %>
        <p class="text-muted">No notes found.</p>
      <% } else { %>
        <% notes.forEach(note => { %>
          <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5><%= note.title %></h5>
                <p><%= note.description %></p>
                <small class="text-muted">Subject: <%= note.subject %></small><br>
                <small>Uploaded by: <%= note.uploadedBy ? note.uploadedBy.name : "Unknown" %></small><br>

                <!-- Tags -->
                <% if (note.tags.length) { %>
                  <p class="mt-2">
                    <% note.tags.forEach(tag => { %>
                      <span class="badge bg-secondary"><%= tag %></span>
                    <% }) %>
                  </p>
                <% } %>

                <!-- Actions -->
                <a href="/notes/download/<%= note._id %>" class="btn btn-sm btn-success">Download</a>
                <button class="btn btn-sm btn-outline-primary like-btn" data-id="<%= note._id %>">
                  ‚ù§Ô∏è Like (<span class="like-count"><%= note.likes.length %></span>)
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script>
    $(".like-btn").click(function () {
      const btn = $(this);
      const id = btn.data("id");

      $.post(`/notes/like/${id}`, {}, function (data) {
        if (data.success) {
          btn.find(".like-count").text(data.likes);
        }
      });
    });
  </script>

</body>
</html>
