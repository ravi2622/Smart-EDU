<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Notes - Smart EDU</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
</head>
<body class="bg-light">

  <div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">📘 Notes</h2>
      <% if (user && user.role === "teacher") { %>
        <a href="/notes/upload" class="btn btn-success">➕ Upload Note</a>
      <% } %>
    </div>

    <!-- Flash Messages -->
    <% if (success_msg) { %>
      <div class="alert alert-success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert alert-danger"><%= error_msg %></div>
    <% } %>

    <!-- Filters -->
    <form method="GET" class="row g-2 mb-4">
      <div class="col-md-3">
        <select name="subject" class="form-select" onchange="this.form.submit()">
          <option value="all" <%= currentSubject === "all" ? "selected" : "" %>>All Subjects</option>
          <% subjects.forEach(sub => { %>
            <option value="<%= sub %>" <%= currentSubject === sub ? "selected" : "" %>><%= sub %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <input type="text" name="search" class="form-control" placeholder="Search notes..." value="<%= currentSearch %>">
      </div>
      <div class="col-md-3">
        <button class="btn btn-primary w-100">🔍 Search</button>
      </div>
    </form>

    <!-- Notes List -->
    <div class="row">
      <% if (notes.length === 0) { %>
        <p class="text-muted">No notes found.</p>
      <% } else { %>
        <% notes.forEach(note => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
              <div class="card-body">
                <!-- Title links to single note view -->
                <h5 class="fw-bold">
                  <a href="/notes/<%= note._id %>" class="text-decoration-none text-dark">
                    <%= note.title %>
                  </a>
                </h5>

                <p class="text-muted mb-2"><%= note.description %></p>

                <!-- Subject & Tags -->
                <p>
                  <span class="badge bg-info text-dark">📚 <%= note.subject %></span>
                  <% if (note.tags.length) { %>
                    <% note.tags.forEach(tag => { %>
                      <span class="badge bg-secondary"><%= tag %></span>
                    <% }) %>
                  <% } %>
                </p>

                <!-- Uploaded By -->
                <small class="d-block mb-2">
                  Uploaded by: <strong><%= note.uploadedBy ? note.uploadedBy.name : "Unknown" %></strong>
                  <% if (note.uploadedBy && note.uploadedBy.role === "teacher") { %>
                    <span class="badge bg-warning text-dark">Teacher</span>
                  <% } else { %>
                    <span class="badge bg-light text-dark">Student</span>
                  <% } %>
                </small>

                <!-- Actions -->
                <div class="d-flex align-items-center gap-2">
                  <a href="/notes/download/<%= note._id %>" class="btn btn-sm btn-success">
                    ⬇️ Download (<%= note.downloads %>)
                  </a>
                  <button 
                    class="btn btn-sm <%= note.likes.some(like => like.user.toString() === (user ? user._id.toString() : "")) ? 'btn-danger' : 'btn-outline-danger' %> like-btn" 
                    data-id="<%= note._id %>">
                    ❤️ Like (<span class="like-count"><%= note.likes.length %></span>)
                  </button>
                  <a href="/notes/<%= note._id %>" class="btn btn-sm btn-outline-primary ms-auto">
                    👁 View
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Like Toggle Script -->
  <script>
    $(".like-btn").click(function (e) {
      e.preventDefault();
      const btn = $(this);
      const id = btn.data("id");

      $.post(`/notes/like/${id}`, {}, function (data) {
        if (data.success) {
          btn.find(".like-count").text(data.likes);
          if (data.liked) {
            btn.removeClass("btn-outline-danger").addClass("btn-danger");
          } else {
            btn.removeClass("btn-danger").addClass("btn-outline-danger");
          }
        }
      });
    });
  </script>

</body>
</html>
